{# _includes/footer.njk #}
<footer class="bg-gray-800 text-gray-400 py-8">
    <div class="container mx-auto px-6 text-center">
        <p>&copy; <span id="current-year"></span> {{ site.copyrightName or "Ben's Photography" }}. All Rights Reserved.</p>
        <div class="mt-4 space-x-4">
            <a href="#gallery" class="hover:text-orange-500 transition duration-300 cursor-pointer">Gallery</a>
            <a href="#about" class="hover:text-orange-500 transition duration-300 cursor-pointer">About</a>
            <a href="#contact" class="hover:text-orange-500 transition duration-300 cursor-pointer">Contact</a>
        </div>
    </div>
    <script>
        // Script voor jaartal specifiek in de footer
        const currentYearSpan = document.getElementById('current-year');
        if (currentYearSpan) {
            currentYearSpan.textContent = new Date().getFullYear();
        }
    </script>
</footer>