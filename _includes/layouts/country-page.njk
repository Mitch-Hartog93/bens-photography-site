{# _includes/layouts/country-page.njk #}
{% extends "layouts/base.njk" %} {# Gebruikt de algemene basis layout #}

{% block content %}
<section class="page py-16 bg-white text-gray-800">
    <div class="container mx-auto px-32"> {# Gebruik dezelfde brede padding als de homepage #}
        <div class="flex justify-between items-center mb-12">
             {# De 'title' komt uit de front matter van het trigger-bestand (bijv. costa-rica.njk) #}
             <h2 class="text-4xl font-bold text-gray-900">{{ title }} Foto's</h2>
             {# Link terug naar de hoofdpagina (anker naar galerij) #}
             <a href="/#gallery" class="text-blue-600 hover:text-orange-500 transition duration-300 text-lg">&larr; Terug naar Hoofdgalerij</a>
        </div>

        {# DEBUG: Toon de tag die wordt gebruikt en het aantal gevonden foto's #}
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6" role="alert">
            <p class="font-bold">Debug Info:</p>
            <p>Gebruikte tag voor deze pagina: <code>{{ tag }}</code></p>
            <p>Aantal foto's gevonden in collectie <code>collections.{{ tag }}</code>: <code>{{ collections[tag].length if collections[tag] else 0 }}</code></p>
        </div>

        {# Grid om de foto's weer te geven #}
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {# Loop door alle items in de collectie die bij deze pagina hoort #}
            {# De 'tag' variabele komt uit de front matter van het trigger-bestand #}
            {%- for photo in collections[tag] | reverse %} {# 'reverse' toont nieuwste eerst (optioneel) #}
            <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden shadow-lg group transform transition-all duration-300 hover:shadow-2xl">
                 {# DEBUG: Toon data voor elke foto #}
                 <img src="{{ photo.data.image | url }}" alt="{{ photo.data.alt or photo.data.title }}" class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" onerror="this.onerror=null; this.src='https://placehold.co/400x400/cccccc/999999?text=Afbeeldingsfout: {{ photo.data.image | url }}'; console.error('Fout bij laden afbeelding: {{ photo.data.image | url }}')">
            </div>
            {%- else %}
            {# Wordt getoond als er geen foto's zijn met de opgegeven tag #}
            <p class="col-span-full text-center text-gray-600">Er zijn nog geen foto's in deze galerij voor de tag '{{ tag }}'. Controleer of de foto-bestanden de juiste tag hebben.</p>
            {%- endfor %}
        </div>
    </div>
</section>
{% endblock %}
