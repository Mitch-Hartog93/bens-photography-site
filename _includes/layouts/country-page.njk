{# _includes/layouts/country-page.njk #}
{# Deze template gebruikt de 'base.njk' layout als basis #}
{% extends "layouts/base.njk" %}

{# Dit 'block' vervangt de 'content' placeholder in base.njk #}
{% block content %}
<section class="page py-16 bg-white text-gray-800"> {# Zorg voor lichte achtergrond en donkere tekst #}
    <div class="container mx-auto px-6">
        <div class="flex justify-between items-center mb-8">
             {# Gebruik de 'title' uit de front matter van de trigger-pagina (zie Stap 3) #}
             <h2 class="text-3xl font-bold">{{ title }} Photos</h2>
             {# Link terug naar de hoofdgalerij op de homepage #}
             <a href="/#gallery" class="text-blue-600 hover:text-orange-500 transition duration-300">&larr; Back to Main Gallery</a>
        </div>

        {# Grid om de foto's weer te geven #}
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            {# Loop door alle items in de collectie die bij deze pagina hoort #}
            {# De collectie wordt bepaald door de 'tag' in de trigger-pagina (zie Stap 3) #}
            {%- for photo in collections[tag] | reverse %} {# 'reverse' toont nieuwste eerst (optioneel) #}
            <div class="aspect-square bg-gray-200 rounded-lg overflow-hidden shadow-md">
                 {# Gebruik data uit de front matter van elk foto-bestand (.md) #}
                 {# De 'url' filter zorgt voor correcte paden #}
                 <img src="{{ photo.data.image | url }}" alt="{{ photo.data.alt or photo.data.title }}" class="w-full h-full object-cover" onerror="this.onerror=null; this.src='https://placehold.co/400x400/cccccc/999999?text=Error';">
                 {# Optioneel: titel onder de foto #}
                 {# <p class="text-center text-sm mt-1 p-1">{{ photo.data.title }}</p> #}
            </div>
            {%- endfor %}
        </div>
    </div>
</section>
{% endblock %}